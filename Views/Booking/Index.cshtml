@model IEnumerable<MVC_Projec2.Models.Booking>
@{
    ViewData["Title"] = "Booking List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Hall</th>
            <th>Session</th>
            <th>Atelier</th>
            <th>MakeUp</th>
            <th>Decor</th>
            <th>Status</th>
            <th>User</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Hall?.Name</td>
                <td>@item.Session?.Duration</td>
                <td>@item.Atelier?.Name</td>
                <td>@item.MakeUp?.Name</td>
                <td>@item.Decor?.Style</td>
                <td>@item.Status</td>
                <td>@item.user_id</td>
                <td>@item.Created_at.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

